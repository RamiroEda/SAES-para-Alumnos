<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/failed_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="4dp"
        android:text="Materias reprobadas"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/failed_courses_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:divider="@color/colorDivider"
            android:orientation="vertical"
            android:showDividers="middle" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/outated_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="16dp"
        android:text="Materias desfasadas"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/outdated_courses_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:divider="@color/colorDivider"
            android:orientation="vertical"
            android:showDividers="middle" />
    </androidx.cardview.widget.CardView>
</LinearLayout>